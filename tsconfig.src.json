{
  "compilerOptions": {
    "module": "nodenext",
    "outDir": "build",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
